{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"],
      "@editor/*": ["./packages/bib-editor/*"]
    },
    "types": ["vite/client", "node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "packages/**/*"],
  "exclude": ["node_modules"]
}
